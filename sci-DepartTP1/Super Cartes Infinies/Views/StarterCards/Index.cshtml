@model IEnumerable<Models.Models.StarterCard>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Créer un nouveau</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Card.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card.Attack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card.Health)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card.Rarity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Card.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Card.Attack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Card.Health)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Card.Cost)
            </td>
            <td>
                <img src="@item.Card.ImageUrl" alt="@item.Card.ImageUrl" style="width: 300px; height: 200px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Card.Rarity)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
