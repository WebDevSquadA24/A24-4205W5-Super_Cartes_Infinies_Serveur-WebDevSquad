@model Models.Models.GameConfig

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer ceci ?</h3>
<div>
    <h4>Configuration</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NbCardsToDraw)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NbCardsToDraw)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NbManaToReceive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NbManaToReceive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NbMaxDeck)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NbMaxDeck)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NbMaxCard)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NbMaxCard)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retourner à la liste</a>
    </form>
</div>
